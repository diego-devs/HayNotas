<UserControl x:Class="HayNotas.Views.NotesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:HayNotas.Converters"
             Background="{StaticResource BaseBrush}">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Notes List -->
        <Border Grid.Column="0" BorderBrush="{StaticResource SurfaceBrush}" BorderThickness="0,0,1,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Your Notes"
                           FontSize="18" FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           Margin="16,16,16,12" />

                <ListBox ItemsSource="{Binding Notes}"
                         SelectedItem="{Binding SelectedNote}"
                         Background="Transparent" BorderThickness="0"
                         Margin="8,0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0,2" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                CornerRadius="8" Padding="12,10">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource SurfaceBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource SurfaceBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}" FontSize="14"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Text="{Binding ModifiedAt, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}"
                                           Foreground="{StaticResource SubTextBrush}" FontSize="11"
                                           Margin="0,4,0,0" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Note Detail -->
        <Grid Grid.Column="1">
            <!-- Empty state -->
            <TextBlock Text="Select a note to view it"
                       Foreground="{StaticResource SubTextBrush}"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedNote, Converter={x:Static converters:ObjectToBoolConverter.Instance}}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Note content -->
            <DockPanel Visibility="{Binding SelectedNote, Converter={x:Static converters:ObjectToVisibilityConverter.Instance}}"
                       Margin="20,16">

                <!-- Action bar -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="{Binding SelectedNote.Title}"
                               FontSize="22" FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0" />

                    <Button Content="Share" Style="{StaticResource SecondaryButton}"
                            Command="{Binding ShowSharePanelCommand}"
                            Margin="0,0,8,0" FontSize="13" />

                    <Button Content="Delete" Style="{StaticResource DangerButton}"
                            Command="{Binding DeleteNoteCommand}"
                            FontSize="13" />
                </StackPanel>

                <!-- Share Panel -->
                <Border DockPanel.Dock="Top"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8" Padding="16,12" Margin="0,0,0,12"
                        Visibility="{Binding IsSharePanelVisible, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Share Note" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}" FontSize="14"
                                       VerticalAlignment="Center" Margin="0,0,12,0" />
                            <Button Content="Close" Style="{StaticResource IconButton}"
                                    Command="{Binding HideSharePanelCommand}" FontSize="12" />
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBox Text="{Binding ShareEmail, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource DarkTextBox}" Width="250"
                                     Margin="0,0,8,0" />
                            <Button Content="Send Email" Style="{StaticResource PrimaryButton}"
                                    Command="{Binding SendEmailCommand}" FontSize="13" />
                        </StackPanel>

                        <!-- WhatsApp -->
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding ShareWhatsApp, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource DarkTextBox}" Width="250"
                                     Margin="0,0,8,0" />
                            <Button Content="WhatsApp" Style="{StaticResource PrimaryButton}"
                                    Command="{Binding SendWhatsAppCommand}"
                                    Background="{StaticResource GreenBrush}" FontSize="13" />
                        </StackPanel>

                        <TextBlock Text="{Binding StatusText}"
                                   Foreground="{StaticResource PeachBrush}"
                                   FontSize="12" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>

                <!-- Note content -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding SelectedNote.Content, Mode=OneWay}"
                             IsReadOnly="True"
                             Background="Transparent"
                             Foreground="{StaticResource TextBrush}"
                             FontSize="14" FontFamily="Cascadia Code, Consolas"
                             BorderThickness="0"
                             TextWrapping="Wrap"
                             AcceptsReturn="True" />
                </ScrollViewer>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
